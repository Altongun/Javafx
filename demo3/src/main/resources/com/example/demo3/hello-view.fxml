               <MenuItem mnemonicParsing="false" onAction="#aboutPopup" text="About" />
           </Menu>
           <Menu mnemonicParsing="false" text="Exit">
               <MenuItem mnemonicParsing="false" onAction="#exitProgram" text="Quit" />
           </Menu>
       </MenuBar>
   </top>
