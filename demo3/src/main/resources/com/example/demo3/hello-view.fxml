                    <Insets top="10.0" />
                </VBox.margin>
                <toggleGroup>
                    <ToggleGroup fx:id="originalOrModified" />
                </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="moddedRadio" disable="true" mnemonicParsing="false" text="Modified Image" toggleGroup="$originalOrModified">
                <VBox.margin>
                    <Insets top="5.0" />
                </VBox.margin>
            </RadioButton>
        </VBox>
    </right>
   <top>
       <MenuBar BorderPane.alignment="CENTER">
           <Menu mnemonicParsing="false" text="File">
               <MenuItem mnemonicParsing="false" onAction="#loadPicture" text="Load Image" />
